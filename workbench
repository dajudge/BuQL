#! /bin/sh

set -e

DIR=$(dirname "$(readlink -f "$0")")

IMG=$(docker build -q $DIR/.workbench)

if [ "$#" -eq 0 ]; then
    CMD=bash
else
    CMD="$@"
fi

if [ "true" = "$CI_MODE" ]; then
    INTERACTIVE=""
else
    INTERACTIVE="--entrypoint entrypoint-interactive.sh -it"
fi


docker run --rm \
    -v /etc/passwd:/etc/passwd \
    -v /etc/group:/etc/group \
    -v $HOME:$HOME \
    -e USER="$USER" \
    -w $DIR \
    --net host \
    --privileged \
    $INTERACTIVE $IMG $CMD
