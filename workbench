#! /bin/sh

set -e

DIR=$(dirname "$(readlink -f "$0")")

IMG=$(docker build -q $DIR/.workbench)

if [ "$#" -eq 0 ]; then
    CMD=bash
else
    CMD="$@"
fi

if [ "true" = "$CI_MODE" ]; then
    CONTAINER_OPTS="-v /root:/root -v /${CI_PROJECT_DIR}:/${CI_PROJECT_DIR} -w $CI_PROJECT_DIR"
else
    CONTAINER_OPTS="-e USER=$USER -v $HOME:$HOME --entrypoint entrypoint-interactive.sh -w $DIR -it"
fi

echo docker run --rm \
    -v /etc/passwd:/etc/passwd \
    -v /etc/group:/etc/group \
    --net host \
    $CONTAINER_OPTS $IMG $CMD


docker run --rm \
    -v /etc/passwd:/etc/passwd \
    -v /etc/group:/etc/group \
    --net host \
    $CONTAINER_OPTS $IMG $CMD
